# Environment Configuration Example
# Copy this file to .env.development, .env.staging, or .env.production
# and fill in the actual values

# Environment (dev, staging, prod)
ENV=dev

# Firebase Configuration
# These values come from your Firebase project settings
FIREBASE_API_KEY=your-api-key-here
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456

# API Endpoints
API_URL=http://localhost:5001/your-project/us-central1/api
WEBSOCKET_URL=ws://localhost:5001

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your-key-here
STRIPE_SECRET_KEY=sk_test_your-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Email Service (SendGrid, Mailgun, etc.)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your-email-api-key
EMAIL_FROM=noreply@inventorypro.com
EMAIL_FROM_NAME=Inventory Pro

# Storage
STORAGE_BUCKET=gs://your-project.appspot.com

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Sentry Error Tracking (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags
ENABLE_BARCODE_SCANNING=true
ENABLE_OFFLINE_MODE=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_BIOMETRIC_AUTH=true

# Development Only
USE_FIREBASE_EMULATOR=false
FIREBASE_EMULATOR_HOST=localhost
FIRESTORE_EMULATOR_PORT=8080
AUTH_EMULATOR_PORT=9099
FUNCTIONS_EMULATOR_PORT=5001
STORAGE_EMULATOR_PORT=9199

# App Configuration
APP_NAME=Inventory Pro
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# Support
SUPPORT_EMAIL=support@inventorypro.com
SUPPORT_PHONE=+1-555-123-4567
DOCUMENTATION_URL=https://docs.inventorypro.com

# Legal
TERMS_OF_SERVICE_URL=https://inventorypro.com/terms
PRIVACY_POLICY_URL=https://inventorypro.com/privacy

# Social Media (Optional)
TWITTER_HANDLE=@inventorypro
FACEBOOK_PAGE_ID=inventorypro
LINKEDIN_COMPANY=inventorypro

# Custom Branding
PRIMARY_COLOR=#2196F3
SECONDARY_COLOR=#FFC107
LOGO_URL=https://inventorypro.com/logo.png

# Limits and Quotas
MAX_PRODUCTS_FREE_PLAN=100
MAX_PRODUCTS_BASIC_PLAN=1000
MAX_PRODUCTS_PRO_PLAN=10000
MAX_FILE_UPLOAD_SIZE_MB=10
MAX_USERS_PER_ORGANIZATION=50

# Cache Configuration
CACHE_DURATION_MINUTES=60
OFFLINE_DATA_RETENTION_DAYS=30

# Security
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
REQUIRE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=true

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_CRASH_REPORTING=true
LOG_LEVEL=info

# Regional Settings
DEFAULT_LOCALE=en_US
DEFAULT_CURRENCY=USD
DEFAULT_TIMEZONE=America/New_York